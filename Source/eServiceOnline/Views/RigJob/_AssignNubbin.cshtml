@model eServiceOnline.Models.NubbinBoard.NubbinModel

@using (Html.BeginForm("AssignNubbinToRigJob", "RigJob", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.HiddenFor(m => m.ServicePointId)
    @Html.HiddenFor(m => m.RigJobId)
    @Html.HiddenFor(m => m.CallSheetNumber)
    <div class="sj_dialog_body sj_lsd_ud">
        <div class="det_list">
            <label class="det_label">Nubbin</label>
            <div class="det_text">
                <ej-drop-down-list id="Id" enable-filter-search="true" Width="280px" read-only="false">
                    <e-datamanager json="@ViewBag.NubbinList"></e-datamanager>
                    <e-drop-down-list-fields text="Text" value="Value"/>
                </ej-drop-down-list>
                <div id="NubbinTip" style="display:none; color:red;">* Nubbin is required</div>
            </div>
        </div>
    </div>

    <div class="sj_dialog_foot">
        <input type="submit" value="Save" onclick="return verify()"/>
    </div>
}

<ej-script-manager></ej-script-manager>
<script>
    function verify() {
        if ($("#Id").val() === 0 || $("#Id").val() === "") {
            $("#NubbinTip").show();
            return false;
        } else {
            $("#NubbinTip").hide();
            return true;
        }
    }
</script>