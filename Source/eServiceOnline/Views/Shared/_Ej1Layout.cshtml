@using System.Configuration
@using System.Threading.Tasks
@using eServiceOnline.Controllers
@using eServiceOnline.Data
@using eServiceOnline.SecurityControl
@using MetaShare.Common.Foundation
@using MetaShare.Common.Foundation.Permissions
@using Microsoft.AspNetCore.Hosting
@using Group = MetaShare.Common.Foundation.Permissions.Group
@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
@inject IHostingEnvironment Environment
@{
    var appServiceAddress = ConfigurationManager.AppSettings["AppServiceAddress"];
    var forecastAddress = appServiceAddress + "scheduler?selectedDistricts=";
    var mapAddress = appServiceAddress + "map?selectedDistricts=";
    var crewMgmtAddress = appServiceAddress + "schedule-redirect?selectedDistricts=";
    var jobBoardAddress = appServiceAddress + "assignment-redirect?selectedDistricts=";
    var salesBoardAddress = appServiceAddress + "sales-forecast?selectedDistricts=";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eService Online</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/EServiceExpress.js"></script>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/lib/syncfusion-javascript/Content/ej/web/bootstrap-theme/ej.web.all.min.css" rel="stylesheet" />
        <link href="~/lib/syncfusion-javascript/Content/ej/web/responsive-css/ej.responsive.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link href="~/lib/syncfusion-javascript/Content/ej/web/bootstrap-theme/ej.web.all.min.css" rel="stylesheet" />
        <link href="~/lib/syncfusion-javascript/Content/ej/web/responsive-css/ej.responsive.css" rel="stylesheet" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
    <script>
        $(function () {
            var str1 = "#header";
            var header = str1.concat("@ViewBag.HighLight");
            $(header).addClass("active");
        });
        function AddSelectedDistrict(obj, schedulerAddress) {
            var retrieval = {};
            var selectedDistricts = '';
            var retrievalStr = $("#RetrievalConditions").val();
            if (typeof (retrievalStr) !== 'undefined' && retrievalStr.length > 0) {
                retrieval = JSON.parse(retrievalStr);
                $("#sj_retrieval_conditions input").each(function (i, ele) {
                    var key = $(ele).attr("id");
                    if (retrieval[key] !== 0 && retrieval[key] > 60) {
                        selectedDistricts = selectedDistricts + retrieval[key] + ',';
                    }
                });
            }
            var url = '';
            url = schedulerAddress + selectedDistricts.slice(0, -1);
            obj.href = url;
            return false;
        }
    </script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand">eService Online</span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="headerUpcomingJobs"><a class="ok" href="~/UpcomingJobs">Upcoming Jobs</a></li>
                    <li id="headerProductHaul"><a class="ok" href="~/ProductHaul">Product Haul</a></li>
                    <li id="headerRigBoard"><a class="ok" href="~/RigBoard">Rig Board</a></li>
                    <li id="headerBulkPlant"><a class="ok" href="~/BulkPlant">Bulk Plant</a>
                    <li id="headerResources"><a class="ok" href="~/ResourceBoard">Resource</a></li>
                    <li id="headerCrewMgmt"><a class="ok" href="#" onclick="AddSelectedDistrict(this, '@crewMgmtAddress')">Crew Mgmt</a></li>
                    <li id="headerJobBoard"><a class="ok" href="#" onclick="AddSelectedDistrict(this, '@jobBoardAddress')">Job Board</a></li>
                    <!-- <li id="headerCalendar"><a class="ok" href="~/Calendar">Calendar</a></li> -->
                    <!--                    <li id="headerOperationBoard">        <a class="ok" href="/OperationBoard">Operation Board</a>    </li> -->
                    <li id="headerForecast"><a class="ok" href="#" onclick="AddSelectedDistrict(this, '@forecastAddress')">Forecast</a></li>
                    <li id="headerSales"><a class="ok" href="#" onclick="AddSelectedDistrict(this, '@salesBoardAddress')">Sales Forecast</a></li>
                    <li id="headerMap"><a class="ok" href="#" onclick="AddSelectedDistrict(this, '@mapAddress')">Map</a></li>


                </ul>

            </div>

        </div>
    </nav>
    @{
        var environmentName = ConfigurationManager.AppSettings["applicationContext"];
    }
    @if (environmentName != "production")
    {
    <div class="test_icon"></div>
    }
    <div class="container body-content">
        @RenderSection("SampleHeading", false)
        @RenderSection("ControlsSection", false)

        <footer style="width: 100%">
            <hr style="visibility: hidden" />
            <p>&copy; 2017 - eServiceOnline @ViewBag.VersionNumber</p>
        </footer>
    </div>
    <div class="sj_mask"></div>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/jsrender/jsrender.min.js"></script>
        <script src="~/lib/syncfusion-javascript/Scripts/ej/web/ej.web.all.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/lib/jsrender/jsrender.min.js"></script>
        <script src="~/lib/syncfusion-javascript/Scripts/ej/web/ej.web.all.min.js"></script>
    </environment>
    @RenderSection("ScriptSection", false)
    <ej-script-manager></ej-script-manager>
</body>
</html>
