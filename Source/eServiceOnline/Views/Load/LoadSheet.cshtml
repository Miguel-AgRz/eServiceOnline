@model eServiceOnline.Models.ProductHaul.PrintLoadSheetViewModel

@{
    ViewData["Title"] = "Load Sheet";
    Layout = "~/Views/Shared/_LoadLayout.cshtml";
}
@section SampleHeading{
    <link href="~/css/loadSheet.css" rel="stylesheet" />

    <div class="printPage">
        <div class="header">
            <img src="~/images/logo_head.png" />
            <div class="head_title">
                <span>Blend Breakdown Sheet</span><br />
                <span id="barcode_bbs"></span>
            </div>
        </div>
        <div class="body-table">
            <table border="0" cellspacing="0" cellpadding="0" class="table_up">
                <tr>
                    <td width="194">
                        <div class="">
                            <span>Date:</span>
                            <label>&nbsp;@DateTime.Now.ToShortDateString()</label>
                        </div>
                    </td>
                    <td width="189">
                        <div class="">
                            <span>Bulk Plant:</span>
                            <label>&nbsp;@Html.DisplayFor(model => model.ProductHaulModel.BulkPlantName)</label>
                        </div>
                    </td>
                    <td width="191">
                        <div class="">
                            <span>Destination Location:</span>
                            <label>&nbsp;@Html.DisplayFor(model => model.ProductHaulModel.WellLocation)</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="">
                            <span>Client:</span>
                            <label>&nbsp;@Html.DisplayFor(model => model.ProductHaulModel.ClientName)</label>
                        </div>
                    </td>
                    <td>
                        <div class="">
                            <span>Rig Name:</span>
                            <label>&nbsp;@Html.DisplayFor(model => model.ProductHaulModel.RigName)</label>
                        </div>
                    </td>
                    <td>
                        <div class="">
                            <span>Call Sheet#:</span>
                            <label>&nbsp;@Html.DisplayFor(model => model.ProductHaulModel.CallSheetNumber)</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="">
                            <span>Driver #:</span>
                            <label>&nbsp;@Html.DisplayFor(model => model.ProductHaulModel.Driver)</label>
                        </div>
                    </td>
                    <td>
                        <div class="">
                            <span>Unit #:</span>
                            <label>&nbsp;@Html.DisplayFor(model => model.ProductHaulModel.Bulker)</label>
                        </div>
                    </td>
                    <td>
                        <div class="">
                            <span>Bin #:</span>
                            <label>&nbsp;@Html.DisplayFor(model => model.ProductHaulModel.BinInformationName)</label>
                        </div>
                    </td>
                </tr>
            </table>

            <table border="0" cellspacing="0" cellpadding="0" class="table_mid">
