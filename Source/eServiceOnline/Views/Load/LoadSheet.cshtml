                    <th colspan="2">
                        @Html.DisplayFor(model => model.ProductHaulModel.BlendChemicalDescription)
                    </th>
                </tr>
                <tr>
                    <td>
                        <label>Mix Water (m³/t):</label>
                        <span>@Html.DisplayFor(model => model.ProductHaulModel.MixWater)</span>
                    </td>
                    <td>
                        <label>Base Blend (@Html.DisplayFor(model => model.ProductHaulModel.BaseBlendUnit)):</label>
                        <span>@Html.DisplayFor(model => model.ProductHaulModel.BaseBlendWeight)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Yield (m³/t):</label>
                        <span> @Html.DisplayFor(model => model.ProductHaulModel.Yield)</span>
                    </td>
                    <td>
                        <label>Total Weight (t):</label>
                        <span>@Html.DisplayFor(model => model.ProductHaulModel.TotalBlendWeight)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Density (kg/m³):</label>
                        <span>@Html.DisplayFor(model => model.ProductHaulModel.Density)</span>
                    </td>
                    <td>
                        <label>Bulk Volume (m³):</label>
                        <span>@Html.DisplayFor(model => model.ProductHaulModel.BulkVolume)</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Sack Weight (kg/t):</label>
                        <span> @Html.DisplayFor(model => model.ProductHaulModel.SackWeight)</span>
                    </td>
                    <td>
                        <label>&nbsp;</label>
                        <span>&nbsp;</span>
                    </td>
                </tr>
            </table>

            <table class="table_down" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <th colspan="5">BASE BLEND: @Html.DisplayFor(model => model.ProductHaulModel.BaseBlend)</th>
                </tr>
                <tr style="font-weight: bold;background-color: #ECECEA;">
                    <td width="300">Material</td>
                    <td width="180">Required</td>
                    <td width="50">Unit</td>
                    <td width="110">Bag Size (kg)</td>
                    <td width="110"># of Bags</td>
                </tr>

                @foreach (var item in Model.ProductHaulModel.BaseProductLoadSections)
                {
            <tr>
                <td>@item.BlendChemicalModel.Name</td>
                <td>@item.RequiredAmount</td>
                <td>@item.Unit</td>
                        <td>
                    @{
                        string bagSize = item.BagSize == 0 ? string.Empty : item.BagSize.ToString();
                        @bagSize
                    }
                    @*                            @item.BagSize*@
                </td>
                <td>
                    @{
                        string numberOfBags = item.NumberOfBags == 0 ? string.Empty : item.NumberOfBags.ToString();
                        @numberOfBags
                    }
                    @*                            @item.NumberOfBags*@
                </td>
            </tr>
                }
            </table>

            <table class="table_down" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <th colspan="6">ADDITIVES</th>
                </tr>
                <tr style="font-weight: bold;background-color: #ECECEA;">
                    <td width="300">Material</td>
                    <td width="180">Required</td>
                    <td width="50">Unit</td>
                    <td width="110">Bag Size (kg)</td>
                    <td width="110"># of Bags</td>
                </tr>

                @foreach (var item in Model.ProductHaulModel.AdditiveProductLoadSections)
                {
            <tr>
                <td>@item.BlendChemicalModel.Name</td>
                <td>@item.RequiredAmount</td>
                <td>@item.Unit</td>
                        <td>
                    @{
                        string bagSize = item.BagSize == 0 ? string.Empty : item.BagSize.ToString();
                        @bagSize
                    }
                </td>
                <td>
                    @{
                        string numberOfBags = item.NumberOfBags == 0 ? string.Empty : item.NumberOfBags.ToString();
                        @numberOfBags
                    }
                </td>
            </tr>
            }
            </table>

            <table class="table_down" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <th colspan="6">ADDITIONAL ADDITIVE LIST</th>
                </tr>
                <tr style="font-weight: normal;background-color: #ECECEA;">
                    <td width="109">Material</td>
                    <td width="101">Amount</td>
                    <td width="88">Unit</td>
                    <td width="98">Addition Method</td>
                </tr>

                @foreach (var item in Model.ProductHaulModel.AdditionalProductLoadSections)
                {
                    <tr>
                        <td>@item.BlendChemicalModel.Name</td>
                        <td>@item.RequiredAmount</td>
                        <td>@item.Unit</td>
                        <td>@item.AdditionMethod</td>
                    </tr>
                }
            </table>


            <table border="0" cellspacing="0" cellpadding="0" class="table_btm">
                <tr>
                    <td width="100">
                        <div class="">
                            <span>BP Op #1:</span>
                            <label>&nbsp;</label>
                        </div>
                    </td>
                    <td width="35"></td>
                    <td width="100">
                        <div class="">
                            <span>BP Op #2:</span>
                            <label>&nbsp;</label>
                        </div>
                    </td>
                    <td width="35"></td>
                    <td width="100">
                        <div class="">
                            <span>Disp:</span>
                            <label>&nbsp;</label>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div class="footer">
            <img src="~/images/logo_foot.png" />
        </div>
    </div>

