@section ScriptSection{
    <script>
        var BarcodeGenerator0 = new ejs.barcodegenerator.BarcodeGenerator({
            "height": "55px",
            "type": "Code93",
            "value": "@Html.DisplayTextFor(model=>model.BlendBreakdownSheetSerialNumber)",
            "width": "354px"
        });
        BarcodeGenerator0.appendTo("#barcode_bbs");
    </script>
